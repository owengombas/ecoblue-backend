{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es7",
      "esnext.asynciterable"
    ],
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@type": ["src/type/index"],
      "@class": ["src/class/index"],
      "@constant": ["src/constant/index"]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
